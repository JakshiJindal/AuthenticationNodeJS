<link rel="stylesheet" href="/css/user_profile.css">
<img src="<%=user.avatar%>" alt="<%=user.name%>" width="100">


<% if(locals.user.id== profile_user.id){%>
  <form action="/users/update/<%=profile_user.id%>" ecctype="multipart/form-data" method="POST">
  <input type="text" name="name" placeholder="Your Name" value="<%= profile_user.name%>" required>
  <input type="text" name="email" placeholder="Your Email" value="<%= profile_user.username%>" required>
  <input type="file" name="avatar" placeholder="profile picture">
  <input type="submit" value="Update">

  </form>

    <%}else{%>
        <p><%= profile_user.name%></p>
        <p><%= profile_user.username%></p>
        <%}%>


